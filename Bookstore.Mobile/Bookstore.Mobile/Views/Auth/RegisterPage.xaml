<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bookstore.Mobile.Views.RegisterPage"
             xmlns:viewmodels="clr-namespace:Bookstore.Mobile.ViewModels"
             xmlns:converters="clr-namespace:Bookstore.Mobile.Converters"
             x:DataType="viewmodels:RegisterViewModel"
             Title="Register"
             Shell.NavBarIsVisible="False">
    <!-- Hide Navigation Bar for Register Page -->

    <Grid Padding="0" RowDefinitions="*,Auto">
        <!-- Centered Card with ScrollView -->
        <ScrollView Grid.Row="0" VerticalOptions="FillAndExpand" HorizontalOptions="CenterAndExpand">
            <Frame BorderColor="{StaticResource Gray300Light}"
                   BackgroundColor="{StaticResource SurfaceLight}"
                   CornerRadius="16"
                   Padding="28,32"
                   HasShadow="True"
                   WidthRequest="340">
                <VerticalStackLayout Spacing="20">
                    <!-- Logo/Icon -->
                    <Image Source="logo.png" HeightRequest="64" WidthRequest="64" HorizontalOptions="Center" Margin="0,0,0,10"/>

                    <!-- Header -->
                    <Label Text="Create a New Account"
                           Style="{StaticResource Headline}"
                           HorizontalOptions="Center"
                           FontSize="24"
                           FontAttributes="Bold"
                           Margin="0,0,0,4" FontFamily="InterRegular"/>
                    <Label Text="Register to get started" HorizontalOptions="Center" Style="{StaticResource SubHeadline}" FontSize="16" TextColor="{StaticResource Gray500Light}" FontFamily="InterRegular"/>

                    <!-- Error Message -->
                    <Frame IsVisible="{Binding HasError}"
                           BackgroundColor="{StaticResource ErrorLight}"
                           BorderColor="{StaticResource ErrorLight}"
                           Padding="10"
                           CornerRadius="8"
                           Margin="0,0,0,0">
                        <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label Text="⚠️" FontSize="18" VerticalOptions="Center"/>
                            <Label Text="{Binding ErrorMessage}" TextColor="{StaticResource ErrorLight}" FontSize="14" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Register Form -->
                    <VerticalStackLayout Spacing="14">
                        <!-- Username -->
                        <Frame Style="{StaticResource EntryFrame}">
                            <Entry Placeholder="Username (min 3 characters)"
                                   Text="{Binding UserName}"
                                   FontSize="16"/>
                        </Frame>
                        <!-- Email -->
                        <Frame Style="{StaticResource EntryFrame}">
                            <Entry Placeholder="Email"
                                   Text="{Binding Email}"
                                   Keyboard="Email"
                                   FontSize="16"/>
                        </Frame>
                        <!-- First Name -->
                        <Frame Style="{StaticResource EntryFrame}">
                            <Entry Placeholder="First Name"
                                   Text="{Binding FirstName}"
                                   FontSize="16"/>
                        </Frame>
                        <!-- Last Name -->
                        <Frame Style="{StaticResource EntryFrame}">
                            <Entry Placeholder="Last Name"
                                   Text="{Binding LastName}"
                                   FontSize="16"/>
                        </Frame>
                        <!-- Phone Number -->
                        <Frame Style="{StaticResource EntryFrame}">
                            <Entry Placeholder="Phone Number"
                                   Text="{Binding PhoneNumber}"
                                   Keyboard="Telephone"
                                   FontSize="16"/>
                        </Frame>
                        <!-- Password -->
                        <Frame Style="{StaticResource EntryFrame}">
                            <Entry Placeholder="Password (min 6 characters)"
                                   Text="{Binding Password}"
                                   IsPassword="True"
                                   FontSize="16"/>
                        </Frame>
                        <!-- Confirm Password -->
                        <Frame Style="{StaticResource EntryFrame}">
                            <Entry Placeholder="Confirm Password"
                                   Text="{Binding ConfirmPassword}"
                                   IsPassword="True"
                                   FontSize="16"/>
                        </Frame>
                        <Label Text="(*) Required information"
                               Margin="5,15,0,10"
                               FontSize="12"
                               TextColor="{StaticResource Gray500Light}" />
                        <!-- Register Button -->
                        <Button Text="Register"
                                Command="{Binding RegisterCommand}"
                                IsEnabled="{Binding IsNotBusy}"
                                BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}"
                                TextColor="{StaticResource White}"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                HeightRequest="48"
                                Margin="0,10,0,0"/>
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                            IsVisible="{Binding IsBusy}"
                                            HorizontalOptions="Center"
                                            Color="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </ScrollView>

        <!-- Footer (Login Link) -->
        <HorizontalStackLayout Grid.Row="1" Spacing="5" HorizontalOptions="Center" Margin="0,0,0,30">
            <Label Text="Already have an account?" VerticalOptions="Center"/>
            <Label Text="Login" TextColor="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" FontAttributes="Bold" VerticalOptions="Center" TextDecorations="Underline">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToLoginCommand}"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>